{
  "compilerOptions": {
    "target": "ESNext",                     // Use modern JavaScript features
    "module": "ESNext",                     // Use ES Modules
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include necessary libraries
    "jsx": "react-jsx",                     // Use React's JSX runtime
    "moduleResolution": "node",            // Resolve modules in Node.js style
    "strict": true,                        // Enable all strict type-checking options
    "esModuleInterop": true,               // Enable interop between CommonJS and ES modules
    "skipLibCheck": true,                  // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent file name casing
    "allowSyntheticDefaultImports": true,  // Allow default imports
    "resolveJsonModule": true,             // Enable importing JSON files
    "baseUrl": ".",                        // Base directory for resolving paths
    "paths": {                             // Optional: Define alias paths
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@pages/*": ["src/pages/*"]
    },
    "outDir": "./dist",                    // Output directory for compiled files
    "noEmit": true                         // Don't emit compiled files (for pure type-checking)
  },
  "include": ["src"],                      // Include only the `src` folder
  "exclude": ["node_modules", "dist"]      // Exclude unnecessary folders
}
